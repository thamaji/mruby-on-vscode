{
    "terminal.integrated.allowChords": false,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/.devcontainer/.extensions": true,
    },
    "files.eol": "\n",
    "ruby.useBundler": false,
    "ruby.useLanguageServer": true,
    "ruby.lint": {
        "rubocop": {
            "useBundler": true
        },
        "reek": {
            "useBundler": true
        }
    },
    "ruby.format": "rubocop",
    "[ruby]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "cSpell.ignorePaths": [
        "**/.git/objects/**",
        "**/.devcontainer/**",
        "**/.vscode/**"
    ],
    "cSpell.words": [
    ]
}